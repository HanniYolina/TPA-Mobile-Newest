<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailActivity"
        android:background="#2e2f21"
        >

        <ImageView
            android:id="@+id/detail_poster_img_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingTop="15dp"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textColor="#a16966"
            android:textSize="28sp"
            android:padding="8dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/txt_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#cc9c99"
            android:textSize="14sp"
            android:padding="6dp"
            android:text="synopsis"
            />

        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/txt_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#cc9c99"
            android:textSize="14sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Released"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/txt_released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#cc9c99"
            android:textSize="14sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run Time"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/txt_runtimme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#cc9c99"
            android:textSize="14sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/txt_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#cc9c99"
            android:textSize="14sp"
            android:padding="8dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <VideoView
                android:id="@+id/video_trailer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/txt_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#cc9c99"
            android:hint="Review"
            android:padding="8dp"
            />

        <Button
            android:id="@+id/btn_add_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Review"
            android:background="#a16966"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/txt_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Recommendation"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/slider_recommendation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/btn_add_to_movielist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add to movie list"
            android:backgroundTint="#a16966"
            android:textAlignment="center"
            />
    </LinearLayout>
</ScrollView>
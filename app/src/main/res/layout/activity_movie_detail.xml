<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailActivity"
        android:background="#2e2f21"
        >

        <VideoView
            android:id="@+id/video_slider"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textColor="#a16966"
            android:textSize="28sp"
            android:padding="8dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/txt_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#cc9c99"
            android:textSize="14sp"
            android:padding="6dp"
            android:text="synopsis"
            />

        <TextView
            android:id="@+id/txt_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

         <TextView
            android:id="@+id/txt_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie Recommendation"
            android:textColor="#a16966"
            android:textSize="20sp"
            android:padding="8dp"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/slider_recommendation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="4dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add to Schedule"
            android:backgroundTint="#a16966"
            android:textAlignment="center"
            />
    </LinearLayout>
</ScrollView>